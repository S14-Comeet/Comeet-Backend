<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.backend.domain.passport.mapper.query.PassportQueryMapper">

    <resultMap id="PassportResultMap" type="com.backend.domain.passport.entity.Passport">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="year" column="year"/>
        <result property="month" column="month"/>
        <result property="coverImageUrl" column="cover_image_url"/>
        <result property="totalCoffeeCount" column="total_coffee_count"/>
        <result property="totalStoreCount" column="total_store_count"/>
        <result property="totalBeanCount" column="total_bean_count"/>
        <result property="topOrigin" column="top_origin"/>
        <result property="topRoastery" column="top_roastery"/>
        <result property="originSequence" column="origin_sequence"/>
        <result property="totalOriginDistance" column="total_origin_distance"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="PassportResultMap">
        SELECT id,
               user_id,
               year,
               month,
               cover_image_url,
               total_coffee_count,
               total_store_count,
               total_bean_count,
               top_origin,
               top_roastery,
               origin_sequence,
               total_origin_distance,
               created_at,
               updated_at
        FROM passports
        WHERE id = #{passportId}
    </select>

    <select id="findAllByUserIdAndYear" resultMap="PassportResultMap">
        SELECT id,
               user_id,
               year,
               month,
               cover_image_url,
               total_coffee_count,
               total_store_count,
               total_bean_count,
               top_origin,
               top_roastery,
               origin_sequence,
               total_origin_distance,
               created_at,
               updated_at
        FROM passports
        WHERE user_id = #{userId}
          AND year = #{year}
        ORDER BY month ASC
    </select>

</mapper>
