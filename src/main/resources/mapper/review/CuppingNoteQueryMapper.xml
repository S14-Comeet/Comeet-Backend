<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.backend.domain.review.mapper.query.CuppingNoteQueryMapper">
    <select id="findByReviewId" parameterType="long" resultType="CuppingNote">
        SELECT *
        FROM cupping_notes
        WHERE review_id = #{reviewId}
    </select>

    <select id="existsByReviewId" parameterType="long" resultType="boolean">
        SELECT EXISTS(
            SELECT 1
            FROM cupping_notes
            WHERE review_id = #{reviewId}
        )
    </select>
</mapper>
