<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!-- 
    주의: Spring Boot에서는 application.yaml에서 대부분의 설정을 관리하므로
    이 파일은 선택적입니다. application.yaml에서 설정하기 어려운
    고급 기능(TypeHandler, Plugin 등)이 필요할 때만 사용하세요.
    -->

    <!-- 전역 설정 (application.yaml과 중복되지 않게 주의) -->
    <settings>
        <!-- 자동 매핑 레벨 설정 -->
        <setting name="autoMappingBehavior" value="PARTIAL"/>
        <!-- 알 수 없는 컬럼 자동 매핑 실패 시 경고 -->
        <setting name="autoMappingUnknownColumnBehavior" value="WARNING"/>
        <!-- Executor 타입 (SIMPLE, REUSE, BATCH) -->
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <!-- 로컬 캐시 범위 (SESSION, STATEMENT) -->
        <setting name="localCacheScope" value="SESSION"/>
        <!-- NULL 값 처리를 위한 JDBC 타입 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <!-- 
    Type Aliases는 application.yaml의 type-aliases-package로 대체 가능
    특정 클래스만 alias를 지정하고 싶을 때 사용
    -->
    <!--
    <typeAliases>
        <typeAlias type="com.backend.domain.User" alias="User"/>
    </typeAliases>
    -->

    <!-- 
    Custom Type Handler 등록
    예: JSON, Enum, 날짜 등의 커스텀 변환이 필요한 경우
    -->
    <!--
    <typeHandlers>
        <typeHandler handler="com.backend.config.handler.JsonTypeHandler"
                     javaType="com.backend.domain.JsonObject"/>
    </typeHandlers>
    -->

    <!--
    플러그인 설정
    예: 페이징, 성능 모니터링 등
    -->
    <!--
    <plugins>
        <plugin interceptor="com.github.pagehelper.PageInterceptor">
            <property name="helperDialect" value="mysql"/>
            <property name="reasonable" value="true"/>
        </plugin>
    </plugins>
    -->
</configuration>
