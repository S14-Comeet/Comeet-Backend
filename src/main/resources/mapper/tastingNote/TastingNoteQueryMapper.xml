<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.backend.domain.review.mapper.query.TastingNoteQueryMapper">
    <select id="findFlavorIdsByReviewId" resultType="java.lang.Long">
        SELECT flavor_id
        FROM tasting_notes
        WHERE review_id = #{reviewId}
        ORDER BY flavor_id
    </select>

    <select id="findFlavorIdsByReviewIds" resultType="com.backend.domain.review.dto.common.ReviewFlavorDto">
        SELECT review_id AS reviewId, flavor_id AS flavorId
        FROM tasting_notes
        WHERE review_id IN
        <foreach collection="reviewIds" item="reviewId" open="(" separator="," close=")">
            #{reviewId}
        </foreach>
        ORDER BY review_id
    </select>
</mapper>
