<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.backend.domain.review.mapper.command.TastingNoteCommandMapper">
    <insert id="insertTastingNotes">
        INSERT INTO tasting_notes (review_id, flavor_id, created_at, updated_at)
        VALUES
        <foreach collection="flavorIdList" item="flavorId" separator=",">
            (#{reviewId}, #{flavorId}, now(), now())
        </foreach>
    </insert>
    <delete id="deleteAllByReviewId">
        DELETE
        FROM tasting_notes
        WHERE review_id = #{reviewId}
    </delete>
</mapper>